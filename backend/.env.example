# MYCELIA_GOOGLE_DRIVE_ROOT=~/Library/CloudStorage/GoogleDrive-YOUR_EMAIL/My Drive/Easy Voice Recorder
# MYCELIA_LOCAL_AUDIO_ROOT=~/Library/mycelia/audio
MYCELIA_GOOGLE_TZ=Europe/Amsterdam
MYCELIA_LOCAL_TZ=Europe/Moscow
