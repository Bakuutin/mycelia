MYCELIA_URL=http://localhost:5173

# run `server.ts token create`command to get these values
MYCELIA_TOKEN=mycelia_1111111111111111111111111111111111111111
MYCELIA_CLIENT_ID=111111111111111111111111

SECRET_KEY=11111111-1111-1111-1111-111111111111
DATABASE_NAME=mycelia

# IMPORTANT: REDIS_PASSWORD must match the value in ../.env (root directory)
# Docker Compose reads from root .env file
REDIS_PASSWORD=password

# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017
MONGO_INITDB_ROOT_USERNAME=root
MONGO_INITDB_ROOT_PASSWORD=password

# Kafka Configuration
# IMPORTANT: These must match the values in ../.env (root directory)
KAFKA_CLUSTER_ID=KafkaCluster-001
KAFKA_ADMIN_PASSWORD=password

# OpenTelemetry Configuration
OTEL_DENO=false
OTEL_SERVICE_NAME=mycelia
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# Application Configuration
LOG_LEVEL=INFO
NODE_ENV=development

STT_SERVER_URL=http://localhost:8087
