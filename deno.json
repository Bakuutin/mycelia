{
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "no-unused-vars", "require-await"]
    }
  },
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022",
      "deno.ns"
    ],
    "types": [
      "@remix-run/node",
      "vite/client"
    ],
    "jsx": "react-jsx",
    "strict": true
  },
  "unstable": [
    "sloppy-imports"
  ],
  "nodeModulesDir": "auto",
  "imports": {
    "@/": "./app/",
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@zaubrik/djwt": "jsr:@zaubrik/djwt@^3.0.2"
  }
}
